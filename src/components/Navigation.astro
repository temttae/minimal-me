---
import '../styles/nav.css';

const pathname = Astro.url.pathname;
const links = [
  { href: "/", label: "Home" },
  { href: "/work", label: "Work" },
];
---

<header class="nav">
  <div class="nav__inner">
    <nav class="nav__links">
      {links.map((l) =>
        pathname === l.href ? (
          <span class="nav__link">{l.label}</span>
        ) : (
          <a class="nav__link nav__link-noncurrent" href={l.href}>{l.label}</a>
        )
      )}
    </nav>
  </div>
</header>
